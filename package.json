{
  "name": "symbol-peertools",
  "description": "Symbol Peer Tools",
  "version": "0.1.0",
  "author": "ccHarvestasya",
  "bin": "./bin/run.js",
  "bugs": "https://github.com/ccHarvestasya/symbol-peertools/issues",
  "dependencies": {
    "@inquirer/prompts": "^5.3.8",
    "@noble/hashes": "^1.4.0",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "figlet": "^1.7.0",
    "log4js": "^6.9.1",
    "node-cron": "^3.0.3",
    "pm2": "^5.4.2",
    "simple-symbol-node-cert": "^1.0.5",
    "symbol-sdk": "^3.2.2"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^4",
    "@types/figlet": "^1",
    "@types/mocha": "^10",
    "@types/node": "^22.1.0",
    "@types/node-cron": "^3",
    "chai": "^4",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9",
    "mocha": "^10",
    "oclif": "^4",
    "rimraf": "^6.0.1",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "ts-patch": "^3.2.1",
    "tsx": "^4.17.0",
    "typescript": "^5",
    "typescript-transform-paths": "^3.4.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json",
    "/sh"
  ],
  "homepage": "https://github.com/ccHarvestasya/symbol-peertools",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "symbol-peertools",
    "dirname": "symbol-peertools",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "helpClass": "./dist/help"
  },
  "repository": "ccHarvestasya/symbol-peertools",
  "scripts": {
    "build": "shx rm -rf dist && tspc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "rest:start": "rimraf ./.rest.pid && yarn tsx ./src/rest/server.ts start 3000",
    "pm2:list": "yarn pm2 list",
    "pm2:rest:start": "yarn build && yarn pm2 start --name rest --interpreter node ./dist/rest/pm2Service.js --node-args './dist/rest/pm2Service.js ./config.json'",
    "pm2:rest:stop": "yarn pm2 stop rest"
  },
  "types": "dist/index.d.ts"
}
